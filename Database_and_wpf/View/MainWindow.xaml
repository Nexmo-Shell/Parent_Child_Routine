<Window x:Class="Database_and_wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Database_and_wpf.View"
        xmlns:vm="clr-namespace:Database_and_wpf.ViewModel"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <vm:MainWindowViewModel/>
    </Window.DataContext>
    <Border CornerRadius="25" Background="Beige" Margin="25" >

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Button 
                Content="Neuer Eintrag" Margin="10" 
                Command="{Binding NewContentCommand}">
                

            </Button>
            <Grid
                Grid.Column="1"
                Grid.Row="1">
                <WrapPanel x:Name="PanelMainWindow"  Orientation="Horizontal" Margin="15" DataContext="{Binding Projects}" />
            </Grid>
        </Grid>

    </Border>

    
</Window>
